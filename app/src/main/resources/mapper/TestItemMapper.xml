<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
        "http://mybatis.org/dtd/mybatis-3-mapper.dtd">

<mapper namespace="com.katya.app.module.test.TestItemMapper">

    <resultMap id="TestItemResult" type="com.katya.app.module.test.TestItem">
        <id property="id" column="id"/>
        <result property="name" column="name"/>
        <result property="description" column="description"/>
        <result property="createdAt" column="created_at"/>
    </resultMap>

    <select id="findAll" resultMap="TestItemResult">
        SELECT id, name, description, created_at
        FROM test_items
        ORDER BY id
    </select>

    <select id="findById" resultMap="TestItemResult">
        SELECT id, name, description, created_at
        FROM test_items
        WHERE id = #{id}
    </select>

    <insert id="insert" useGeneratedKeys="true" keyProperty="id">
        INSERT INTO test_items (name, description)
        VALUES (#{name}, #{description})
    </insert>

    <update id="update">
        UPDATE test_items
        SET name = #{name},
        description = #{description}
        WHERE id = #{id}
    </update>

    <delete id="deleteById">
        DELETE FROM test_items
        WHERE id = #{id}
    </delete>

</mapper>
