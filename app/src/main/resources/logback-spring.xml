<?xml version="1.0" encoding="UTF-8"?>
<configuration>
    <include resource="org/springframework/boot/logging/logback/defaults.xml"/>

    <springProperty scope="context" name="APP_NAME" source="spring.application.name"/>

    <!-- Console Appender - For Development -->
    <appender name="CONSOLE" class="ch.qos.logback.core.ConsoleAppender">
        <encoder>
            <pattern>%d{yyyy-MM-dd HH:mm:ss.SSS} [%thread] %-5level %logger{36} [traceId=%X{traceId:-}] - %msg%n</pattern>
        </encoder>
    </appender>

    <!-- JSON Console Appender - For Production (ELK) -->
    <appender name="JSON_CONSOLE" class="ch.qos.logback.core.ConsoleAppender">
        <encoder class="net.logstash.logback.encoder.LogstashEncoder">
            <customFields>{"app":"${APP_NAME}"}</customFields>

            <!-- Only include useful MDC fields -->
            <includeMdcKeyName>traceId</includeMdcKeyName>
            <includeMdcKeyName>userId</includeMdcKeyName>
            <includeMdcKeyName>username</includeMdcKeyName>

            <!-- Include context name -->
            <includeContext>false</includeContext>

            <!-- Include caller data only for ERROR level -->
            <includeCallerData>false</includeCallerData>

            <!-- Include stack trace for errors -->
            <includeStackTrace>true</includeStackTrace>

            <!-- Shorten logger names -->
            <shortenedLoggerNameLength>36</shortenedLoggerNameLength>

            <!-- Field names customization -->
            <fieldNames>
                <timestamp>timestamp</timestamp>
                <version>[ignore]</version>
                <levelValue>[ignore]</levelValue>
                <thread>thread</thread>
                <logger>logger</logger>
                <message>message</message>
                <stackTrace>stack_trace</stackTrace>
            </fieldNames>

            <!-- Exclude unnecessary fields -->
            <throwableConverter class="net.logstash.logback.stacktrace.ShortenedThrowableConverter">
                <maxDepthPerThrowable>20</maxDepthPerThrowable>
                <maxLength>2048</maxLength>
                <shortenedClassNameLength>36</shortenedClassNameLength>
                <exclude>sun\.reflect\..*</exclude>
                <exclude>java\.lang\.reflect\..*</exclude>
                <exclude>org\.springframework\..*</exclude>
                <exclude>org\.apache\.catalina\..*</exclude>
                <exclude>org\.apache\.tomcat\..*</exclude>
            </throwableConverter>
        </encoder>
    </appender>

    <!-- File Appender - Rolling Log Files -->
    <appender name="FILE" class="ch.qos.logback.core.rolling.RollingFileAppender">
        <file>logs/application.log</file>
        <encoder class="net.logstash.logback.encoder.LogstashEncoder">
            <customFields>{"app":"${APP_NAME}"}</customFields>
            <includeMdcKeyName>traceId</includeMdcKeyName>
            <includeMdcKeyName>userId</includeMdcKeyName>
            <includeContext>false</includeContext>
            <includeCallerData>false</includeCallerData>
            <shortenedLoggerNameLength>36</shortenedLoggerNameLength>

            <fieldNames>
                <timestamp>timestamp</timestamp>
                <version>[ignore]</version>
                <levelValue>[ignore]</levelValue>
            </fieldNames>
        </encoder>

        <rollingPolicy class="ch.qos.logback.core.rolling.TimeBasedRollingPolicy">
            <fileNamePattern>logs/application.%d{yyyy-MM-dd}.log</fileNamePattern>
            <maxHistory>30</maxHistory>
            <totalSizeCap>10GB</totalSizeCap>
        </rollingPolicy>
    </appender>

    <!-- Error File Appender -->
    <appender name="ERROR_FILE" class="ch.qos.logback.core.rolling.RollingFileAppender">
        <file>logs/error.log</file>
        <filter class="ch.qos.logback.classic.filter.ThresholdFilter">
            <level>ERROR</level>
        </filter>

        <encoder class="net.logstash.logback.encoder.LogstashEncoder">
            <customFields>{"app":"${APP_NAME}"}</customFields>
            <includeMdcKeyName>traceId</includeMdcKeyName>
            <includeMdcKeyName>userId</includeMdcKeyName>
            <includeStackTrace>true</includeStackTrace>
            <includeCallerData>true</includeCallerData>
            <shortenedLoggerNameLength>36</shortenedLoggerNameLength>

            <fieldNames>
                <version>[ignore]</version>
                <levelValue>[ignore]</levelValue>
            </fieldNames>
        </encoder>

        <rollingPolicy class="ch.qos.logback.core.rolling.TimeBasedRollingPolicy">
            <fileNamePattern>logs/error.%d{yyyy-MM-dd}.log</fileNamePattern>
            <maxHistory>60</maxHistory>
        </rollingPolicy>
    </appender>

    <!-- SQL Log Appender - Separate file for SQL queries -->
    <appender name="SQL_FILE" class="ch.qos.logback.core.rolling.RollingFileAppender">
        <file>logs/sql.log</file>
        <encoder class="net.logstash.logback.encoder.LogstashEncoder">
            <customFields>{"app":"${APP_NAME}","log_type":"sql"}</customFields>
            <includeMdcKeyName>traceId</includeMdcKeyName>
            <includeContext>false</includeContext>
            <shortenedLoggerNameLength>36</shortenedLoggerNameLength>

            <fieldNames>
                <version>[ignore]</version>
                <levelValue>[ignore]</levelValue>
            </fieldNames>
        </encoder>

        <rollingPolicy class="ch.qos.logback.core.rolling.TimeBasedRollingPolicy">
            <fileNamePattern>logs/sql.%d{yyyy-MM-dd}.log</fileNamePattern>
            <maxHistory>7</maxHistory>
            <totalSizeCap>2GB</totalSizeCap>
        </rollingPolicy>
    </appender>

    <!-- Async Appenders for better performance -->
    <appender name="ASYNC_CONSOLE" class="ch.qos.logback.classic.AsyncAppender">
        <appender-ref ref="JSON_CONSOLE"/>
        <queueSize>512</queueSize>
        <discardingThreshold>0</discardingThreshold>
        <includeCallerData>false</includeCallerData>
        <neverBlock>true</neverBlock>
    </appender>

    <appender name="ASYNC_FILE" class="ch.qos.logback.classic.AsyncAppender">
        <appender-ref ref="FILE"/>
        <queueSize>512</queueSize>
        <neverBlock>true</neverBlock>
    </appender>

    <appender name="ASYNC_SQL" class="ch.qos.logback.classic.AsyncAppender">
        <appender-ref ref="SQL_FILE"/>
        <queueSize>256</queueSize>
        <neverBlock>true</neverBlock>
    </appender>

    <!-- Development Profile -->
    <springProfile name="dev,default">
        <root level="INFO">
            <appender-ref ref="CONSOLE"/>
        </root>

        <!-- Application logs -->
        <logger name="com.katya.app" level="DEBUG" additivity="false">
            <appender-ref ref="CONSOLE"/>
        </logger>

        <!-- SQL logs - MyBatis mappers -->
        <logger name="com.katya.app.module.test.TestItemMapper" level="DEBUG" additivity="false">
            <appender-ref ref="CONSOLE"/>
        </logger>

        <!-- Reduce framework noise -->
        <logger name="org.springframework" level="INFO"/>
        <logger name="org.springframework.web" level="INFO"/>
        <logger name="org.mybatis" level="INFO"/>
        <logger name="org.apache.ibatis" level="INFO"/>
        <logger name="com.zaxxer.hikari" level="INFO"/>
        <logger name="org.flywaydb" level="INFO"/>

        <!-- Hide unnecessary logs -->
        <logger name="org.apache.catalina" level="WARN"/>
        <logger name="org.apache.tomcat" level="WARN"/>
        <logger name="org.springframework.boot.autoconfigure" level="WARN"/>
    </springProfile>

    <!-- Production Profile -->
    <springProfile name="prod">
        <root level="INFO">
            <appender-ref ref="ASYNC_CONSOLE"/>
            <appender-ref ref="ASYNC_FILE"/>
            <appender-ref ref="ERROR_FILE"/>
        </root>

        <!-- Application logs -->
        <logger name="com.katya.app" level="INFO" additivity="false">
            <appender-ref ref="ASYNC_CONSOLE"/>
            <appender-ref ref="ASYNC_FILE"/>
            <appender-ref ref="ERROR_FILE"/>
        </logger>

        <!-- SQL logs in production (separate file) -->
        <logger name="com.katya.app.module.test.TestItemMapper" level="DEBUG" additivity="false">
            <appender-ref ref="ASYNC_SQL"/>
        </logger>

        <!-- Reduce framework logs -->
        <logger name="org.springframework" level="WARN"/>
        <logger name="org.mybatis" level="WARN"/>
        <logger name="org.apache.ibatis" level="WARN"/>
        <logger name="com.zaxxer.hikari" level="WARN"/>

        <!-- Hide unnecessary logs -->
        <logger name="org.apache.catalina" level="ERROR"/>
        <logger name="org.apache.tomcat" level="ERROR"/>
        <logger name="org.springframework.boot.autoconfigure" level="ERROR"/>
    </springProfile>

</configuration>